# ===== SAAS CONFIGURATION =====
# Ambiente (development/production)
NODE_ENV=development

# Bancos de Dados (Configure para produção com serviços externos)
PG_DATABASE_URL=postgres://postgres:postgres@localhost:5432/default
REDIS_URL=redis://localhost:6379

# Chave Secreta da Aplicação (Gere uma nova para produção)
APP_SECRET=super_secret_key_for_saas_testing_12345

# Multi-tenant (Core SaaS Feature - Ative para SaaS)
IS_MULTIWORKSPACE_ENABLED=true

# Subdomínio padrão para workspaces
DEFAULT_SUBDOMAIN=app

# ===== AUTENTICAÇÃO =====
# Autenticação por senha (Essencial para SaaS)
AUTH_PASSWORD_ENABLED=true

# Google OAuth (Opcional, mas recomendado)
AUTH_GOOGLE_ENABLED=true
AUTH_GOOGLE_CLIENT_ID=replace_me_with_google_client_id
AUTH_GOOGLE_CLIENT_SECRET=replace_me_with_google_client_secret
AUTH_GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/redirect
AUTH_GOOGLE_APIS_CALLBACK_URL=http://localhost:3000/auth/google-apis/get-access-token

# Microsoft OAuth (Opcional)
AUTH_MICROSOFT_ENABLED=true
AUTH_MICROSOFT_CLIENT_ID=replace_me_with_azure_client_id
AUTH_MICROSOFT_CLIENT_SECRET=replace_me_with_azure_client_secret
AUTH_MICROSOFT_CALLBACK_URL=http://localhost:3000/auth/microsoft/redirect
AUTH_MICROSOFT_APIS_CALLBACK_URL=http://localhost:3000/auth/microsoft-apis/get-access-token

# ===== EMAIL =====
# Configuração básica de email para SaaS
EMAIL_DRIVER=LOGGER
IS_EMAIL_VERIFICATION_REQUIRED=false
EMAIL_FROM_ADDRESS=noreply@yoursaas.com
EMAIL_FROM_NAME='Your SaaS Team'
EMAIL_SYSTEM_ADDRESS=system@yoursaas.com

# SMTP (Para produção, use provedor como SendGrid/Gmail)
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=

# Verificação de email
EMAIL_VERIFICATION_TOKEN_EXPIRES_IN=1h

# Reset de senha
PASSWORD_RESET_TOKEN_EXPIRES_IN=5m

# ===== SEGURANÇA =====
# Tokens de segurança (SaaS Ready)
ACCESS_TOKEN_EXPIRES_IN=30m
REFRESH_TOKEN_EXPIRES_IN=90d
LOGIN_TOKEN_EXPIRES_IN=15m
FILE_TOKEN_EXPIRES_IN=1d

# ===== BILLING & PAGAMENTOS =====
# Sistema de cobrança (Desative para desenvolvimento)
IS_BILLING_ENABLED=false
BILLING_PLAN_REQUIRED_LINK=https://yoursaas.com/upgrade

# Períodos de teste (dias)
BILLING_FREE_TRIAL_DURATION=14
BILLING_PRO_TRIAL_DURATION=30

# Limites de usuários por plano
BILLING_FREE_USERS_LIMIT=5
BILLING_PRO_USERS_LIMIT=50
BILLING_ENTERPRISE_USERS_LIMIT=1000

# ===== STRIPE CONFIGURATION =====
# Chaves do Stripe (SUBSTITUA PELAS SUAS CHAVES DE PRODUÇÃO)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_SUCCESS_URL=
STRIPE_CANCEL_URL=

# Stripe Products (OPCIONAL - usa padrão se não definido)
STRIPE_PRO_PRODUCT_ID=
STRIPE_ENTERPRISE_PRODUCT_ID=

# ===== SERVIDOR =====
PORT=3000
SERVER_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# ===== STORAGE =====
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=.local-storage

# S3 (Para produção)
STORAGE_S3_REGION=
STORAGE_S3_NAME=
STORAGE_S3_ENDPOINT=

# ===== LOGGING =====
LOGGER_DRIVER=CONSOLE
LOGGER_IS_BUFFER_ENABLED=true
LOG_LEVELS=error,warn,info

# Sentry (Para produção)
SENTRY_ENVIRONMENT=main
SENTRY_DSN=
SENTRY_FRONT_DSN=

# ===== RATE LIMITING & SECURITY =====
# Proteção contra abuso (SaaS Protection)
API_RATE_LIMITING_TTL=60
API_RATE_LIMITING_LIMIT=1000

# Limite de registros afetados por mutação
MUTATION_MAXIMUM_AFFECTED_RECORDS=1000

# Captcha
CAPTCHA_DRIVER=
CAPTCHA_SITE_KEY=
CAPTCHA_SECRET_KEY=

# ===== WORKSPACE MANAGEMENT =====
# Gerenciamento de workspaces inativos (SaaS Lifecycle)
WORKSPACE_INACTIVE_DAYS_BEFORE_NOTIFICATION=30
WORKSPACE_INACTIVE_DAYS_BEFORE_SOFT_DELETION=90
WORKSPACE_INACTIVE_DAYS_BEFORE_DELETION=180

# ===== MESSAGING & CALENDAR =====
# Messaging Providers
MESSAGING_PROVIDER_GMAIL_ENABLED=false
MESSAGING_PROVIDER_MICROSOFT_ENABLED=false

# Calendar Providers
CALENDAR_PROVIDER_GOOGLE_ENABLED=false
CALENDAR_PROVIDER_MICROSOFT_ENABLED=false

# IMAP/SMTP/CalDAV
IS_IMAP_SMTP_CALDAV_ENABLED=false

# ===== SERVERLESS =====
SERVERLESS_TYPE=local
SERVERLESS_LOGS_ENABLED=true

# ===== SUPPORT =====
SUPPORT_DRIVER=front
SUPPORT_FRONT_HMAC_KEY=
SUPPORT_FRONT_CHAT_ID=

# ===== MONITORAMENTO =====
EXCEPTION_HANDLER_DRIVER=sentry
METER_DRIVER=opentelemetry,console

# ===== OUTRAS CONFIGURAÇÕES =====
# Sign-in pré-preenchido (Desenvolvimento)
SIGN_IN_PREFILLED=true

# Chrome Extension
CHROME_EXTENSION_ID=

# SSL para produção
PG_SSL_ALLOW_SELF_SIGNED=true
SSL_KEY_PATH=
SSL_CERT_PATH=

# Cloudflare (Para domínios custom)
CLOUDFLARE_API_KEY=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_WEBHOOK_SECRET=

# Analytics
ANALYTICS_ENABLED=
CLICKHOUSE_URL=

# Enterprise Features
ENTERPRISE_KEY=

# Configurações em banco (Avançado)
IS_CONFIG_VARIABLES_IN_DB_ENABLED=false
